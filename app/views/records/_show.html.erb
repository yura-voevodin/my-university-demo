<div class="mx-auto col-md-8">

  <% if @records.empty? %>
  <p>
    <div class="px-3 py-3 mx-auto text-center">
      <h2 class="h1-responsive font-weight-bold text-center my-5">Пар немає</h2>
      <p>Підписуйтеся на <b>Мій Університет</b> в <a target="_blank" href="https://www.instagram.com/university.my/">Instagram</a> та <a target="_blank" href="https://t.me/university_my">Telegram</a></p>
      <p>Або читайте нас на <a target="_blank" href="https://www.facebook.com/myuniversityservice">Facebook</a> та <a target="_blank" href="https://twitter.com/my_university1">Twitter</a></p>
      <%
      images = [
        "4 Multitasking.png",
        "6 Working at desk.png",
        "1 Working remotely.png",
        "7 Social Media.png",
        "8 Work and life balance.png",
        "13 Walking the dog.png"
      ]
      @randomImage = images.sample
      %>
      <%= image_tag(@randomImage, class: "img-fluid") %>
    </div>
  </p>
  <% else %>
  <% for record in @records %>
  <div class="row">
    <div class="col mb-4 mr-0 ml-0">
      <div class="card">
        <div class="card-header">
          <span data-toggle="tooltip" title="<%= l record.start_date, format: "%A, %e %B %Y" %>"><%= record.pair.name %> (<%= l record.pair.start_time, format: "%H:%M" %>)</span>
        </div>

        <% if record.discipline.name.present? %>
        <div class="card-body">
          <h5 class="card-title">
            <span data-toggle="tooltip" title="Назва пари"><%= record.discipline.name %></span>
          </h5>
        </div>
        <% end %>

        <ul class="list-group list-group-flush">

          <% if record.classroom %>
          <li class="list-group-item">
            <span data-toggle="tooltip" title="Аудиторія"><i class="fas fa-door-open mr-2"></i></span>
            <%= link_to classroom_url(record.classroom.friendly_id, pair_date: @date), rel: 'nofollow' do %>
            <span class="ml-2"><%= record.classroom.name %></span>
            <% end %>
          </li>
          <% end %>

          <% if record.teacher %>
          <li class="list-group-item">
            <span data-toggle="tooltip" title="Викладач"><i class="fas fa-chalkboard-teacher mr-2"></i></span>
            <%= link_to teacher_url(record.teacher.friendly_id, pair_date: @date), rel: 'nofollow' do %>
            <span class="ml-2"><%= record.teacher.name %></span>
            <% end %>
          </li>
          <% end %>

          <% if record.groups && record.groups.count > 0 %>
          <li class="list-group-item">
            <span class="mr-2" data-toggle="tooltip" title="Група"><i class="fas fa-users mr-2"></i></span>
            <% for i in 1..record.groups.count do %>
            <%= link_to group_url(record.groups[i-1].friendly_id, pair_date: @date), rel: 'nofollow' do %>
            <%= record.groups[i-1].name %>
            <% end %>
            <% if i != record.groups.count %>
            <%= ',' %>
            <% end %>
            <% end %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <% end %>

  <% end %>

  
</div>
