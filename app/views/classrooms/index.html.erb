<% meta_tag :description, "Аудиторії" %>
<% meta_tag :keywords, "Аудиторії" %>
<% @title = "Мій Університет - Аудиторії" %>
<%= content_for(:canonical_link, classrooms_url) %>
<% no_index %>

<%= render "layouts/navbar" %>

<p id="notice"><%= notice %></p>

<main class="container" role="main">
  <div class="mx-auto col-md-8">
    <h1 class="mb-4"><%= octicon "sign-in", height: 32, width: 32 %> Аудиторії</h1>

    <div class="row">
      <div class="col mb-4 mr-0 ml-0">
        <form method="get" id="search" class="form-inline mt-2 mt-md-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Назва аудиторії" aria-label="Пошук" name="query" value="<%= @query %>">
          <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Шукати</button>
        </form>
      </div>
    </div>

    <div class="row">
      <div class="col mb-4 mr-0 ml-0">

        <% if @classrooms.empty? %>
        <p>Нічого не знайдено</p>
        <% else %>
        <div class="card">
          <ul class="list-group list-group-flush">
            <% @classrooms.each do |classroom| %>
            <li class="list-group-item">
              <div class="d-flex w-100 justify-content-between">
                <span><%= link_to classroom.name, classroom_url(classroom.friendly_id) %></span>
              </div>
            </li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="mt-4"><%= will_paginate @classrooms, :page_links => false, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %></div>
        <div class="container">
          <div class="row"></div>
        </div>
      </div>
    </div>
  </div>
</main>
<%= render "layouts/footer" %>
